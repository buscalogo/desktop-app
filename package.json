{
  "name": "buscalogo-desktop",
  "version": "1.1.0",
  "description": "BuscaLogo Desktop App - Intelligent Web Content Collection & Analysis",
  "main": "src/main.js",
  "homepage": "https://buscalogo.com",
  "author": "BuscaLogo Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --config electron-builder.config.js",
    "build:win": "electron-builder --win --config electron-builder.config.js",
    "build:mac": "electron-builder --mac --config electron-builder.config.js",
    "build:linux": "electron-builder --linux --config electron-builder.config.js",
    "pack": "electron-builder --dir --config electron-builder.config.js",
    "dist": "electron-builder --config electron-builder.config.js",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "release": "npm run build && npm run release:github",
    "release:github": "gh release create",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release",
    "prerelease": "npm run build && gh release create --prerelease",
    "draft": "npm run build && gh release create --draft",
    "publish": "npm run build && gh release create --latest",
    "update-version": "node scripts/update-version.js"
  },
  "keywords": [
    "electron",
    "buscalogo",
    "web-content",
    "search",
    "p2p",
    "chrome-extension"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@electron/notarize": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.8",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.5.2"
  },
  "build": {
    "appId": "com.buscalogo.desktop",
    "productName": "BuscaLogo",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      },
      {
        "from": "src/renderer/assets/",
        "to": "renderer/assets/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "publish": {
    "provider": "github",
    "owner": "buscalogo",
    "repo": "desktop-app",
    "private": false,
    "releaseType": "release",
    "draft": false,
    "prerelease": false,
    "generateReleaseNotes": true,
    "updateProvider": "github",
    "updateRepo": "buscalogo/desktop-app"
  }
}
